<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="countryDao" class="io.robonews.dao.hibernate.CountryDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="channelDao" class="io.robonews.dao.hibernate.ChannelDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="feedDao" class="io.robonews.dao.hibernate.FeedDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="areaDao" class="io.robonews.dao.hibernate.AreaDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="topicDao" class="io.robonews.dao.hibernate.TopicDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="storyDao" class="io.robonews.dao.hibernate.StoryDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="tagDao" class="io.robonews.dao.hibernate.TagDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="imageDao" class="io.robonews.dao.hibernate.ImageDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="imageCopyDao" class="io.robonews.dao.hibernate.ImageCopyDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>